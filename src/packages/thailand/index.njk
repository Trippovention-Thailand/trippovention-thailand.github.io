{% set thailand = packages.thailand %}

<header class="hero compact hero-thailand">
  <div class="container">
    <h1>{{ thailand.hero.title }}</h1>
    <p>{{ thailand.hero.subtitle }}</p>
  </div>
</header>

<section class="section">
  <div class="container">
    <div class="section-title">
      <h2>{{ thailand.whyChoose.title }}</h2>
      <p class="subtitle">{{ thailand.whyChoose.subtitle }}</p>
    </div>

    <div class="grid cols-3">
      {% for feature in thailand.whyChoose.features %}
      <div class="card">
        <div class="body text-center">
          <div class="feature-icon">{{ feature.icon }}</div>
          <h3>{{ feature.title }}</h3>
          <p class="muted">{{ feature.description }}</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<section class="section alt">
  <div class="container">
    <div class="section-title">
      <h2>Amazing Thailand</h2>
      <p class="subtitle">Choose from our carefully curated Thailand experiences</p>
    </div>

    <div class="grid cols-3">
      {% for pkg in thailand.packages %}
      <div class="card">
        <div class="img-wrap">
          <img
            src="{{ assetPath }}{{ pkg.image }}"
            loading="lazy"
            alt="{{ pkg.title }}"
          />
          {% if pkg.ribbon %}
          <span class="ribbon{% if pkg.ribbonClass %} {{ pkg.ribbonClass }}{% endif %}">{{ pkg.ribbon }}</span>
          {% endif %}
        </div>
        <div class="body">
          <div class="badge">{{ pkg.badge }}</div>
          <h3>{{ pkg.title }}</h3>
          <p class="muted">{{ pkg.highlights }}</p>
          <div class="price-row">
            <span class="price-label">Starting from</span>
            <span class="price">{{ pkg.price }}</span>
          </div>
          <div class="mt-20">
            <a class="btn" href="{{ pkg.slug }}.html">View Details ‚Üí</a>
          </div>
        </div>
      </div>
      {% endfor %}

      <div class="card">
        <div class="body text-center">
          <div class="feature-icon">‚ú®</div>
          <h3>Custom Package</h3>
          <p class="muted">
            Looking for something unique? Let us create a personalized Thailand experience just for you.
          </p>
          <div class="mt-20">
            <a class="btn" href="{{ assetPath }}contact/?destination=thailand">Get Quote ‚Üí</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="section cta">
  <div class="container">
    <div class="section-title">
      <h2 class="text-white">Ready to Explore Thailand?</h2>
      <p class="subtitle text-white-90">
        Let us create unforgettable memories in the Land of Smiles
      </p>
    </div>
    <div class="text-center">
      <a class="btn btn-lg ghost" href="{{ assetPath }}contact/?destination=thailand">Get Custom Quote</a>
      <a class="btn btn-lg ghost ml-16" href="tel:{{ site.contact.phone }}">üìû Call Now</a>
    </div>
  </div>
</section>

